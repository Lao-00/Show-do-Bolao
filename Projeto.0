void placar(){
    int i, j, aux;
    char temp[50];

    for(i = 0; i < 10; i++){
        for(j = i + 1; j < 10; j++){
            if(pontos[j][1] > pontos[i][1]){
                aux = pontos[i][1];
                pontos[i][1] = pontos[j][1];
                pontos[j][1] = aux;

                strcpy(temp, nomes[i]);
                strcpy(nomes[i], nomes[j]);
                strcpy(nomes[j], temp);
            }
        }
    }

    printf("\n===== PLACAR =====\n");
    for(i = 0; i < 10 && strlen(nomes[i]) > 0; i++){
        printf("%s - %d pontos\n", nomes[i], pontos[i][1]);
    }
    system("pause");
    system("cls");
}

